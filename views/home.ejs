                <option value="work">Work</option>
                <option value="school">School</option>
                <option value="college">College</option>
                <option value="office">Office</option>
                <option value="other">Other</option>
            </select>
        </div>
        <div>
            <p style="font-size: 20px ; padding: 0px;margin: 0px; padding-top: 20px;">Date</p>
            <input type="date" id="taskDate" class="task-date">
        </div>
    </div>
    <div id="buttons">
      <button id="addTaskButton">+&nbsp;&nbsp;Add Task</button>
      <button id="deleteTaskButton"><span><img src="/images/delete_FILL0_wght400_GRAD0_opsz24.png" alt="" style="height: 16px; width: 16px; padding-top: 4px;"></span>&nbsp; &nbsp;Delete Task</button>
  </div>
  <span id="total-tasks">Total tasks: <span id="tasks-counter">0</span></span>
    </div>
    <ul id="list">
      <li>
        <input type="checkbox" id="task1" data-id="12" class="custom-checkbox">
